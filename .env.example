# Gemini API Key (required for article generation)
# Get it from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Multiple API keys for rotation (GEMINI_API_KEY_1, GEMINI_API_KEY_2, etc.)
# GEMINI_API_KEY_1=your_first_key
# GEMINI_API_KEY_2=your_second_key

# Optional: Number of articles to generate per run
ARTICLES_PER_RUN=10

# Site URL (for production)
NEXT_PUBLIC_SITE_URL=https://bookiscout.com

# =============================================================================
# FEATURE FLAGS (AI-First Content System)
# =============================================================================

# Global toggle for Booking.com affiliate widget
NEXT_PUBLIC_BOOKING_WIDGET_ENABLED=true

# Show Booking widget on /guides/ pages (AI decision content)
# Recommended: false (to maintain AI citability)
NEXT_PUBLIC_BOOKING_WIDGET_ON_GUIDES=false

# Show Booking widget on /articles/ pages (transaction content)
# Recommended: true (monetization layer)
NEXT_PUBLIC_BOOKING_WIDGET_ON_ARTICLES=true

# Enable internal links from guides to articles
NEXT_PUBLIC_GUIDES_INTERNAL_LINKS_ENABLED=true
